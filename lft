######################################
## evaluate command-line parameters ##
######################################
def print_help():
  print("")
  print("lft is looking for trouble. Example usage:")
  print("     $ lft aturing")
  print("")
  print("Options:")
  print("     -v  Verbose output (show packages and more jobs)")
  print("     -s  Show sponsor")
  print("     -h  Show this help menu")
  print("")
  sys.exit(0)

if (len(sys.argv) == 1 or len(sys.argv) > 5):
  print("")
  print("ERROR: Wrong number of command-line parameters.")
  print_help()
if ('-h' in sys.argv or '--help' in sys.argv):
  print_help()
verbose = True if ('-v' in sys.argv) else False
spon    = True if ('-s' in sys.argv) else False
disk    = True if ('-d' in sys.argv) else False

###############################
## if __name__ == "__main__" ##
###############################

# check terminal size
term = Terminal()
width = 80
gutter = ' '
if (term.width < width):
  print(f"Terminal width too small ({term.width} < {width}). Exiting ...")
  sys.exit(0)

# translate hostname (e.g., della5.princeton.edu -> della)
hostname = gethostname().strip().lower()
if (hostname not in utils.known_hosts):
  print(f"{hostname} is unknown (see panes/utils.py). Exiting ...")
  sys.exit(0)
host = utils.known_hosts[hostname]

# ldapsearch (causes code to seemingly hang for 1-2 seconds at start)
username = sys.argv[1].split("@")[0].strip() if "@" in sys.argv[1] else sys.argv[1].strip()
person = dossier.ldap_plus([username])
netid = person[1][8]
if netid is None:
  print("")
  print(f"{username} not found in LDAP (or ldapsearch timed out or anaconda3/2025.6 is loaded). Exiting ...")
  print("")
  sys.exit(0)

# check for existence and permissions of /home
home = f"/home/{netid}"
if isdir(home):
  home_exists = True
  if utils.is_rx(home):
    home_rx = True
  else:
    home_rx = False
else:
  home_exists = False
  home_rx = False

# clear terminal and print header
print(term.home + term.clear)
message = f"{gutter}looking for trouble"
now = datetime.today().strftime('%-I:%M %p (%b %-d)')
num_spaces = width - len(message) - len(now) - len(gutter)
print("=" * width)
print(f"{message}{' ' * num_spaces}{now}")
print("=" * width)

####################################
## print LDAP info about the user ##
####################################

# netid, name, groups, dept, position
p = person[1]
if p[8]:
 if netid == username:
   print("   NetID:", term.bold(p[8]))
 else:
   print(f"   NetID: {term.bold(p[8])} ({term.bold}{term.red}{username} is alias{term.normal})")
if p[0].startswith(": "):
  p[0] = base64.b64decode(p[0][2:].strip()).decode("utf-8")
if p[0]: print("    Name:", p[0])
print("  Groups:")  # completed below
print("    Dept:", p[1]) if p[1] else print("    Dept: unknown")
print("Position:", p[2]) if p[2] else print("Position: unknown")

# user last active
if isdir(home):
  print(utils.last_active(netid))
else:
  print("  Active: N/A")
if spon: print(" Sponsor:")  # completed below


#################
## /home usage ##
#################
class DataStorage:

    PROM_SERVER = "http://cluster-stats:8480"

    def __init__(self, cluster, username, fs, field):
        self.cluster = cluster
        self.username = username
        self.field = field
        self.fs = fs
        self.params = {"query": f"{self.field}" + "{}"}
        self.response = self.__get_data()
        self.uid = self.__get_uid()
        self.value = None

    def __get_data(self):
        try:
            response = requests.get(f"{self.PROM_SERVER}/api/v1/query", self.params)
            response.raise_for_status()
            return response.json()
        except requests.exceptions.ConnectionError:
            return None
        except requests.exceptions.RequestException:
            return None
        except:
            return None

    def __get_uid(self):
        try:
            user_info = pwd.getpwnam(self.username)
            return str(user_info.pw_uid)
        except KeyError:
            return None
        except:
            return None

    def get_value(self):
        if self.response and "data" in self.response:
            r = self.response["data"]["result"]
            for res in r:
                M = res["metric"]
                if M["cluster"] == self.cluster and M["fs"] == self.fs and M["uid"] == self.uid:
                    self.value = round(int(res["value"][1]) / 1024**3)

home_usage = ""
home_quota = ""
ds = DataStorage(cluster=host,
                 username=netid,
                 fs="/home",
                 field="fs_quota_block_usage_bytes")
if ds.uid and ds.uid.isdigit():
    ds.get_value()
    home_usage = f"{ds.value}" if ds.value is not None else None
ds = DataStorage(cluster=host,
                 username=netid,
                 fs="/home",
                 field="fs_quota_block_limit_hard_bytes")
if ds.uid and ds.uid.isdigit():
    ds.get_value()
    home_quota = f"{ds.value}GB" if ds.value is not None else None

