## home directories ##
######################
import csv
flnm = "/home/jdh4/bin/cron/combined_ls.csv"
home_dirs = []
if os.path.isfile(flnm):
  with open(flnm, mode='r') as csv_file:
    csv_reader = csv.DictReader(csv_file)
    next(csv_reader)
    for row in csv_reader:
      if row["netid"] == netid:
        home_dirs = [hdir for hdir in list(row.values())[1:] if hdir != '']
        break

if home_dirs:
  frmt = " @ %-I:%M%p"
  mtime = datetime.fromtimestamp(os.stat(flnm).st_mtime).strftime(frmt)
  with term.location(65, 4):
    print("/home" + mtime)
    for hdir in sorted(home_dirs):
      pre = "*" if hdir in host else " "
      hdir_ = hdir.replace("tiger3", "tiger")
      if host == hdir and home_usage and home_quota:
          print(term.move_x(67) + pre + hdir_ + f" ({home_usage}/{home_quota})")
      else:
          print(term.move_x(67) + pre + hdir_)

